<html>

<head>
    <title>Snake Game</title>
    <link rel="stylesheet" href="play-snake-game.css">
    <link rel="stylesheet" href="../../style.css">
</head>

<body onload="init()">

    <%- include('includes/main_nav') %>

    <main>
        <header>
            <p class="player">Player Name: <span>Student Name</span></p>
            <p class="score">Score: <span>000000</span></p>
            <p class="health">Health: <span>100%</span></p>
        </header>
        <section class="game">
            <canvas></canvas>
        </section>
        <section class="actions">
            <button data-action="start">Start</button>
            <button data-action="pause">Pause</button>
            <button data-action="quit">Quit</button>
        </section>
        <footer>
            <p class="level">Level: <span>000</span></p>
            <p class="time">Elapsed Time: <span>00:00:00</span></p>
        </footer>
    </main>


    <%- include('includes/main_aside', data) %>

    <%- include('includes/footer') %>

    <!-- TODO: Add <script> tags to load the JavaScript code -->
    <script src="play-snake-game.js"></script>
    <script src="../../script.js"></script>

</body>

</html>